@import 'reset';

html, body
    width 100%
    height 100%

#container
    width 100%
    height 100%
    background linear-gradient(130deg, #fafafa, #f2f2f2)

    header
        display flex
        align-items center
        justify-content center
        width 100px
        height 100%

        h1
            width 60px
            height 60px

            a
                display block
                width @width
                height @height
                background-image url('/assets/img/logo.svg')

    footer
        position fixed
        bottom 20px
        right 20px
        font-size 10px
        font-family Helvetica

        ul
            display flex
            align-items center
            justify-content flex-end
            width 100%
            padding 0

            li
                margin-left 20px
                margin-right 10px
                color #888

                a
                    text-decoration none
                    color inherit
                a:hover
                    text-decoration underline

            li:last-child
                flex-grow 1